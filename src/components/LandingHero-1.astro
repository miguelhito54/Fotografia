---
import siteConfig from '../../site.config.mjs';

const owner = siteConfig.owner;
const base = import.meta.env.BASE_URL;
---

<div class="absolute left-0 right-0 z-0">
	<div class="text-center mb-12 relative z-10">
		<h1 class="text-3xl md:text-4xl lg:text-5x leading-tight text-white">
			Instante Vivo
		</h1>
		<p class="mt-4 text-white md:text-lg text-white-700">La memoria también se ve</p>
		<a
			href=`${base}/collections`
			class="mt-8 inline-block px-6 py-3 border-2 border-white rounded-md
                      hover:bg-gray hover:text-white transition-all duration-300
                      text-sm md:text-white font-medium 
                      transform hover:scale-105 active:scale-95"
		>
		Ver Galería
		</a>
	</div>
</div>
